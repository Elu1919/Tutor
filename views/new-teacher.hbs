<div class="my-4 col-9">
       <form action="/teachers/create"
             method="POST">
              <div class="form-row mb-4">
                     <label class="form-label"
                            for="info">Your Introduction</label>
                     <textarea class="form-control"
                               id="info"
                               name="info"
                               placeholder="Introduction"
                               rows="3"
                               value="{{info}}"
                               required></textarea>
              </div>
              <div class="form-row mb-4">
                     <label class="form-label"
                            for="style">Your Teaching Style</label>
                     <textarea class="form-control"
                               id="style"
                               name="style"
                               placeholder="Teaching Style"
                               rows="3"
                               required></textarea>
              </div>
              <div class="form-row mb-4">
                     <label class="form-label"
                            for="time">單堂課程時間 (分鐘)</label>
                     <select class="form-select form-select mb-3"
                             id="time"
                             name="time"
                             aria-label=".form-select-lg example"
                             required>
                            <option value=""
                                    selected
                                    disabled>請選擇時間</option>
                            <option value="30">30 分鐘</option>
                            <option value="60">60 分鐘</option>
                     </select>
              </div>
              <div class="form-row mb-4">
                     <label class="form-label"
                            for="link">課程視訊連結</label>
                     <input class="form-control"
                            type="url"
                            name="link"
                            id="link"
                            placeholder="Link"
                            required>
              </div>
              <div class="form-row mb-4">
                     <label class="form-label">開放時間</label>
                     <div>
                            {{#each weekDay}}
                            <div class="form-check form-check-inline">
                                   <input class="form-check-input border-2 border-primary"
                                          type="checkbox"
                                          id="week-day-{{this.id}}"
                                          name="date"
                                          value="{{this.id}}">
                                   <label class="form-check-label"
                                          for="week-day-{{this.id}}">{{this.date}}</label>
                            </div>
                            {{/each}}
                     </div>
              </div>
              <button type="submit"
                      class="btn btn-primary">Submit</button>
              <a class="btn btn-outline-secondary"
                 href="javascript:history.back()">Back</a>
</div>
</form>
</div>