<div class="mx-auto"
     style="width: 40rem;">
  <div class="mt-4 mb-5 text-center">
    <h1 class="h3 font-weight-normal">Sign In</h1>
  </div>
  <form class="form-login"
        action="/login"
        method="POST">
    <div class="form-row mb-5">
      <input class="form-control"
             id="email"
             type="text"
             name="email"
             class="form-control"
             placeholder="Email"
             required
             autofocus>
    </div>
    <div class="form-row mb-5">
      <input class="form-control"
             id="password"
             type="password"
             name="password"
             class="form-control"
             placeholder="Password"
             required>
    </div>
    <div class="d-grid gap-2 col-5 mx-auto mb-5">
      <button class="btn btn-primary btn-lg"
              type="submit">Sign In</button>
    </div>
  </form>
  <div class="mb-4 text-center">
    <p><a href="http://localhost:3000/auth/google">Or Sign in with Google</a></p>
  </div>
</div>