{{> header-admin route='admin'}}
<table class="table align-middle mb-5">
  <thead class="table-dark">
    <tr>
      <th class="text-center col-3">編號</th>
      <th class="text-center col-3">名字</th>
      <th class="text-center col-3">是否是老師</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td class="text-center col-3">{{this.id}}</td>
      <td class="text-center col-3">{{this.name}}</td>
      <td class="text-center col-3">
        {{#if this.is_teacher}}
        老師
        {{else}}
        學生
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<div>
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      {{#each pagination.pages}}
      {{#ifCond this ../pagination.currentPage}}
      <li class="page-item active"><a class="page-link"
           href="#">{{this}}</a></li>
      {{else}}
      <li class="page-item">
        <a class="page-link"
           href="/admin/users?page={{this}}">{{this}}</a>
      </li>
      {{/ifCond}}
      {{/each}}
    </ul>
  </nav>
</div>