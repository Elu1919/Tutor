<div class="row justify-content-between">

  <div class="col-3 p-4">
    <img src="https://illustcenter.com/wp-content/uploads/2022/09/sdesign_00165-508x381.png"
         class="img-fluid rounded mb-3"
         alt="avatar">
    <h3 class="mb-3 fw-bold">{{user.name}}</h3>
    <h5 class="mb-1 fw-bold"><i class="fa-solid fa-heart"
         style="color: #ffbb00;"></i>　4.5</h5>
    <h5 class="mb-1 fw-bold"><i class="fa-solid fa-address-card"
         style="color: #25a80b;"></i>　About Me</h5>
    <p class="mb-4">{{user.info}}</p>
    <a href="/users/{{user.id}}/edit"><button class="btn btn-primary">Edit</button></a>
  </div>

  <div class="col-9 p-5">

    <div class="mb-5"
         name="new-schedule">
      <h5 class="mb-3 fw-bold">New Schedule</h5>
      <div class="row">

        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <p class="card-text lh-1">Time:</p>
              <p class="card-text lh-1">Student's Name:</p>
              <p class="card-text lh-1">Session Link:</p>
            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="mb-5"
         name="lesson-history">
      <h5 class="mb-3 fw-bold">Your Teaching Style</h5>
      <div class="row">
        <p>{{user.info}}{{user.info}}{{user.info}}</p>
      </div>
    </div>
    <div class="mb-5"
         name="study-hours">
      <h5 class="mb-3 fw-bold">Recent Reviewed</h5>
      <div class="row">

        <div class="d-flex justify-content-between">

          <div class="card col-1 bg-warning bg-opacity-75 me-2"
               style="min-width: 60px;">
            <div class="m-auto">
              <h6 class="card-title lh-sm pt-1 fw-bold">4.4</h6>
            </div>
          </div>

          <div class="card col">
            <div class="my-auto mx-3">
              <h5 class="card-title lh-sm pt-1">Messages</h5>
            </div>
          </div>

        </div>

      </div>
    </div>

  </div>

</div>